/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
page{
   /* background:#f8f8f8;  */
}
.redColor{
  color: #fe4d4d;
}
.purpleColor{
  color: #7D52F8;
}
input,button {
    font-family:'微软雅黑';
}
.btn-wrap {
  margin-top:0 20px;
  padding:0 20px;
}
button[type="default"] {
    color:#fff;
    background-color:#7D52F8; 
    border-radius:50px;
    box-shadow:0 5px 10px 0 rgba(150,82,240,.4);
}
.button-hover[type="default"] {
    color:#fff;
    background-color:#6d53c2;
}
.purpleBtn{
  margin: 0;
  width: 280rpx;
}
button.grayBtn{
  margin: 0;
  width: 280rpx;
  background: #e9e9e9;
  color: #7f7f7f;
  box-shadow:0 5px 10px 0 #dbdbdb;
  border: none;
}
.grayBtn.button-hover[type="default"] {
    color:#7f7f7f;
    background-color:#e0dfdf;
}
button::after{
  border: none;
}
button.seaBlueBtn{
  margin: 0;
  width: 280rpx;
  background: #00c8ff;
  color: #ffffff;
  box-shadow:0 5px 10px 0 #c7e0fb;
  border: none;
}
.seaBlueBtn.button-hover[type="default"] {
    color:#ffffff;
    background-color:#01bdf1;
}

