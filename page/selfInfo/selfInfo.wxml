      <view class='idIcon'></view>
      <view class='inputBox'>
        <view style='margin-bottom:15rpx;'>证件号码：</view>
        <view>
          <input placeholder='请输入您的证件号码' placeholder-style="color:#dadada;font-size:36rpx;" />
