/* page/clientList/clientList.wxss */
.wrapper{
  font-size: 36rpx;
}
.items{
  position: relative;
  border-bottom: 1px #e5e5e5 solid;
   overflow: hidden; 
  height: 70px;
}
.showItem{
  padding: 10px 60rpx;  
  display: flex; 
  flex-direction: column;
  justify-content:space-around;
  position: absolute; 
  width: 100%; 
  box-sizing: border-box;
  z-index: 10; 
  background: white;  
  height: 100%;   
}
.flaotBtnView{
 position: absolute;
 right: 0;
 line-height: 70px;
}
.flaotBtnView view{
  display: inline-block;
}
.reviseBtn{
    background: #00c8ff;
    color: #ffffff;
    padding: 0 35rpx;
}
.delBtn{
    background: #fd4d4d;
    color: #ffffff;
    padding: 0 35rpx;
}
.upIcon{
  width: 10px;
  height: 10px;
  border-top: 1px #9b9b9b solid;
  border-right: 1px #9b9b9b solid;
  transform: rotate(-45deg);
  margin-left: 33rpx;
}
.downIcon{
  width: 10px;
  height: 10px;
  border-top: 1px #9b9b9b solid;
  border-right: 1px #9b9b9b solid;
  transform: rotate(45deg);
  margin-left: 33rpx;
}
.name{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.type{
  display: flex;
  font-size: 26rpx;
  color: #9b9b9b;
}
.typeCode{
  margin-left: 70rpx;
}
checkbox .wx-checkbox-input{
  width: 18px;
  height: 18px;
  border-radius: 50%; 
  margin-right: 60rpx;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
  background: #ff4242;
  border: 1px #ff4242 solid;
}
.hideItem{
  padding: 0 20rpx;
  margin-top: 58px;
  background:  #f9f9f9;
}
.hideItemView{
  padding: 40rpx 60rpx;
  border-top: 1px #e5e5e5 solid;
  font-size: 30rpx;
  line-height: 50rpx;
}
.addView{
  display: flex;
  padding: 40rpx 60rpx;
  align-items: center;
  color: #ff9f00;
  font-size: 30rpx;
}
.addIcon{
  width: 12px;
  height:12px;
  margin-right: 15rpx;
  background:  url("data:image/png;base64,") no-repeat;
  background-size: 100% 100%;
}
.btnBox{
  padding: 100rpx 38rpx;
}