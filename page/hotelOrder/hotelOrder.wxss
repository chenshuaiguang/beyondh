/* page/hotelOrder/hotelOrder.wxss */
.wraaper{
  padding: 40rpx 20rpx;
  font-size: 30rpx;
  color: #9b9b9b;
}
.ordering{
  /* border: 1px red solid; */
  border-radius: 6px;
  box-shadow: 0px 2px 10px 0px grey;  
  margin-bottom: 35rpx;
  background: #f9f9f9;
}
.orederNum{
  padding: 22rpx 42rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px #e5e5e5 solid;
   background: #ffffff; 
   border-radius: 6px;
}
.upIcon{
  width: 10px;
  height: 10px;
  border-top: 1px #9b9b9b solid;
  border-right: 1px #9b9b9b solid;
  transform: rotate(-45deg);
}
.seaFontColor{
  color:#00c8ff;
  font-size:36rpx;
  font-weight: bold;
}
.greenFontColor{
  color:#02c096;
  font-size:36rpx;
  font-weight: bold;
}
.blackFontColor{
  color:black;
  font-size:36rpx;
  font-weight: bold;
}
.orederAccount{
  padding:22rpx 22rpx; 
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px #e5e5e5 dashed;
}
.hotelNameView{
  display: flex;
  justify-content: space-between;
  padding: 27rpx 42rpx;
  color: #666666;
}
.hotelName{
  flex:1;
}
.hotelTimeView{
  display: flex;
  justify-content: space-between;
  padding: 0 42rpx 27rpx;
  color: #666666;
}
.hotelTime{
  flex:1;
}
.whiteView{
  height: 20rpx;
  background: white;
  border-top: 1px #e5e5e5 solid;
  border-bottom: 1px #e5e5e5 solid;
}
.attendView{
  padding-top: 36rpx;
  color: #ff9f00;
  display: flex;
  align-items: center;
}
.yellowIcon{
  width: 12px;
  height: 12px;
  margin-right: 10rpx; 
  background: url('data:image/png;base64,') no-repeat;
  background-size: 100% 100%;
}